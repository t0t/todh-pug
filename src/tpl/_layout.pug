block config
    include _config
doctype html
html(lang=es)
    head
        title=PageTitle
        link( rel="stylesheet", href="bower_components/aos/dist/aos.css", type="text/css")
        link( rel="stylesheet", href="css/Main.css", type="text/css")
        block metatags
            meta(charset='utf-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge, chrome=1')
            meta(name='description', content=MetaDesc)
            meta(name='author', content=Author)
            meta(name="viewport" content="width=device-width, initial-scale=1, user-scalable=no")

    body
        block header
            header.siteHeader(role="banner")
                include ./components/_brand
                include ./partials/_nav-main
                //- include ./components/_search
                //- include ./components/_languages

        main.main
            block main

        block footer
            include ./partials/_footer

        block scripts
            script(src='https://cdn.rawgit.com/michalsnik/aos/2.0.4/dist/aos.js')
            script(src="https://code.jquery.com/jquery-3.2.1.js"
integrity="sha256-DZAnKJ/6XZ9si04Hgrsxu/8s717jcIzLy3oi35EouyE=" crossorigin="anonymous")
    script(src='js/build.js')
